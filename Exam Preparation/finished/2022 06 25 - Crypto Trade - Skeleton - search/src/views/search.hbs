<main>
    <section class="crypto-search">
        <h1>Search</h1>
        <form class="search-form" action="/items/search" method="GET">
            <input type="text" class="search-coin" name="searchName1" placeholder="Search here...">
            <select id="payment" name="searchName2">
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal">PayPal</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>
        <!--replace the class="" with the correct ones!-->
        <!--If there are matches after search-->
        {{#if items}}
        <div class="search-result">
            <div class="search-list">
                {{#each items}}
                {{> item-card}}
                {{/each}}

                {{else}}
                <!--If there are no matches-->
                <!--!-->
                <div class="no-match">
                    <p>No match was found!</p>
                </div>
                {{/if}}
            </div>
        </div>

    </section>
</main>

