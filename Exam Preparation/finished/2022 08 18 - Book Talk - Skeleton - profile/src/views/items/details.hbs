<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">
        <article class="details-card-text">
            <h2>Title:<br> {{title}}</h2>
            <h3>Author: {{author}}</h3>
            <h3>Stars: {{stars}}</h3>
            <h3>Genre: {{genre}}</h3>
            <h3>Review: {{review}}</h3>
            {{#if user}}
              <!--If there is user logged in: <div class="buttons"> -->
              <!--!-->
              <!-- If there is no registered user, do not display buttons-->
              <div class="buttons">
                  {{#if isOwner}}
                    <!--If user is owner: Edit,Delete-->
                    <!--!-->
                    <!--!-->
                    <a href="/items/{{_id}}/edit" class="btn-edit">Edit</a>
                    <a href="/items/{{_id}}/delete" class="btn-delete">Delete</a>
                  {{else}}
                      {{#if isLiked}}
                        <!--If user liked-->
                        <!--!-->
                        <p class="wish-pub">You already added the book to your wish list</p>
                      {{else}}
                        <!--If user didn't liked-->
                        <!--!-->
                        <a href="/items/{{_id}}/like" class="btn-wish">Wish to read</a>
                      {{/if}}
                  {{/if}}
              <!--!-->
              </div>
            {{/if}}
        </article>
        <article class="details-card-image">
            <img src="{{image}}">
        </article>
    </article>
</section>

