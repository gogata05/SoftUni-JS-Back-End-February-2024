<main id="edit">
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Game Code Offer</h1>

                <form action="/items/{{_id}}/edit" method="POST">
                    <label>Platform:</label>
                    <select id="platform" name="platform">
                        <option value="">-------</option>
                        <option value="PC">PC</option>
                        <option value="Nintendo">Nintendo</option>
                        <option value="PS4">PS4</option>
                        <option value="PS5">PS5</option>
                        <option value="XBOX" selected>XBOX</option>
                    </select>
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{image}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{price}}">
                    <label>Genre:</label>
                    <input type="text" id="genre" name="genre" value="{{genre}}">
                    <label>Description:</label>
                    <textarea id="description" name="description">{{description}}</textarea>
                    <input type="submit" id="btn" value="EDIT"></input>
                </form>
            </div>
        </section>
</main>






