<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Location</h2>
        <form class="search-wrapper cf" action="/items/search" method="GET">
            <input id="#search-input" type="text" name="searchName1" placeholder="Search here..." required />
            <button type="submit">Search</button>
        </form>
        <!--If there are matches after search-->
        {{#if items}}
        <div id="search-container">
            <ul class="card-wrapper">
                {{#each items}}
                {{> item-card}}
                {{/each}}
            </ul>
        </div>
        {{else}}
        <!--If there are no matches-->
        <!--!-->
        <div id="no-post">
            <h2>There are no results found.</h2>
        </div>
        {{/if}}
    </section>
</main>
