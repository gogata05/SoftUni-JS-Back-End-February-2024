<main>
    <section id="details-page">
        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Name: {{name}}</h1>
                    <h3>Created by an author: {{itemOwner.firstName}} {{itemOwner.lastName}}</h3>
                    <div class="card_character">
                        <p class="card-species">Species: {{species}}</p>
                        <p class="card-skin">Skin colour: {{skinColor}}</p>
                        <p class="card-eye">Eye Colour: {{eyeColor}}</p>
                    </div>
                    <p class="disc">Description: {{description}}</p>

                    <!-- If there is no registered user, do not display buttons-->
                    {{#if user}}
                    <div class="social-btn">
                        <!-- Only for registered user and author of the post -->
                        {{#if isOwner}}
                        <a href="/creatures/{{_id}}/edit" class="edit-btn">Edit</a>
                        <a href="/creatures/{{_id}}/delete" class="del-btn">Delete</a>
                        {{else}}
                        {{#if isVoted}}
                        <!-- logged in user who has already voted-->
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <!-- logged in users, who have not yet voted-->
                        <a href="/creatures/{{_id}}/voted" class="vote-up">Vote</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}

                </div>
            </div>
            <div class="card_right">
                <img src="{{image}}" alt="image">
            </div>
        </div>
    </section>

    <section id="votes"> 
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        <p class="PV">Total rating of votes: {{likesCount}}</p>
                    </div>

                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    <!-- <p class="disc">People who voted for the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->

                    {{#if emails}}
                    <!-- If not display: -->
                    <p class="disc">People who voted for the post - {{emails}}</p>

                    {{else}}
                    <p class="disc">People who voted for the post - No one has voted yet.</p>

                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</main>